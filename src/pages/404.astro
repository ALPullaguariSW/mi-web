---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

// No necesitamos las partículas en la página 404 para mantenerla ligera,
// pero el fondo será el mismo.
---
<Layout title="404: No Encontrado | Axel Pullaguari">
  <!-- Mantenemos el Header para que el usuario pueda navegar fácilmente -->
  <Header />

  <main>
    <section class="h-screen flex flex-col justify-center items-center text-center px-6">
      <div class="max-w-md">
        <h1 class="text-9xl font-bold text-cyan-500 tracking-tighter">404</h1>
        <h2 class="text-4xl font-bold text-white mt-4 mb-6 tracking-tight">
          Página No Encontrada
        </h2>
        <p class="text-lg text-gray-400 mb-10">
          Lo sentimos, parece que la página que buscas se perdió en el universo digital.
        </p>
        <a 
          href="/" 
          class="inline-block px-8 py-3 bg-cyan-500 hover:bg-cyan-600 rounded-full font-bold transition-colors text-white"
        >
          Volver al Inicio
        </a>
      </div>
    </section>
  </main>
</Layout>